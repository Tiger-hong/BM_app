/* venue-detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  background-color: #ffffff;
}

.loading-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 50rpx;
}

/* 羽毛球拍动画区域 */
.racket-animation {
  position: relative;
  width: 160rpx;
  height: 120rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

/* 羽毛球拍拍面（水平线） */
.racket-face {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #9f2995 0%, #d81b60 50%, #9f2995 100%);
  border-radius: 3rpx;
  box-shadow: 0 2rpx 8rpx rgba(159, 41, 149, 0.4);
  animation: racketGlow 2s ease-in-out infinite;
}

/* 跳动的羽毛球 */
.bouncing-shuttlecock {
  position: absolute;
  bottom: 6rpx; /* 从拍面上方开始 */
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 40rpx;
  animation: shuttlecockBounce 1.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) infinite;
}

.shuttlecock-icon {
  width: 95%;
  height: 95%;
  filter: drop-shadow(0 4rpx 12rpx rgba(159, 41, 149, 0.3));
}

/* 文字动画区域 */
.loading-text-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #9f2995;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 点点动画 */
.loading-dots {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #9f2995 0%, #d81b60 100%);
  animation: dotPulse 1.4s ease-in-out infinite;
}

.dot:nth-child(1) {
  animation-delay: 0s;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

/* 动画定义 */
/* 羽毛球在拍面上跳动 - 更丝滑的动画和最高点翻转 */
@keyframes shuttlecockBounce {
  0% {
    transform: translateX(-50%) translateY(0) scale(1) scaleX(1);
    opacity: 1;
  }
  
  10% {
    transform: translateX(-50%) translateY(-15rpx) scale(1.05) scaleX(1);
    opacity: 1;
  }
  
  20% {
    transform: translateX(-50%) translateY(-30rpx) scale(1.1) scaleX(1);
    opacity: 0.95;
  }
  
  35% {
    transform: translateX(-50%) translateY(-50rpx) scale(1.15) scaleX(1);
    opacity: 0.9;
  }
  
  50% {
    transform: translateX(-50%) translateY(-65rpx) scale(1.2) scaleX(-1);
    opacity: 0.85;
  }
  
  65% {
    transform: translateX(-50%) translateY(-50rpx) scale(1.15) scaleX(-1);
    opacity: 0.9;
  }
  
  80% {
    transform: translateX(-50%) translateY(-30rpx) scale(1.1) scaleX(-1);
    opacity: 0.95;
  }
  
  90% {
    transform: translateX(-50%) translateY(-15rpx) scale(1.05) scaleX(-1);
    opacity: 1;
  }
  
  100% {
    transform: translateX(-50%) translateY(0) scale(1) scaleX(1);
    opacity: 1;
  }
}

/* 拍面发光效果 */
@keyframes racketGlow {
  0%, 100% {
    box-shadow: 0 2rpx 8rpx rgba(159, 41, 149, 0.4);
    opacity: 0.8;
  }
  50% {
    box-shadow: 0 4rpx 16rpx rgba(159, 41, 149, 0.8);
    opacity: 1;
  }
}

/* 点点脉冲效果 */
@keyframes dotPulse {
  0%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
}

/* 图片轮播区域 */
.image-section {
  position: relative;
  height: 400rpx;
  background-color: #ffffff;
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.venue-image {
  width: 100%;
  height: 100%;
}

.default-image {
  width: 100%;
  height: 100%;
}

.image-count {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 球馆信息区域 */
.venue-info {
  background-color: #ffffff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.venue-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.venue-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
}

.venue-district {
  background-color: #e8f4fd;
  color: #1890ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.venue-address {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 30rpx;
}

.address-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #1890ff;
}

.address-text {
  flex: 1;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.4;
}

.copy-hint {
  font-size: 24rpx;
  color: #999999;
  margin-left: 20rpx;
}

.venue-meta {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  width: 40rpx;
  text-align: center;
}

.meta-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meta-label {
  font-size: 28rpx;
  color: #666666;
}

.meta-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.phone-number {
  color: #1890ff;
  text-decoration: underline;
}

/* 设施服务区域 */
.facilities-section {
  background-color: #ffffff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.facilities-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
  margin-top: 24rpx;
  padding: 0 8rpx;
}

.facility-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2rpx 2rpx;
  border-radius: 24rpx;
  background: #f8f9fa;
  border: 1rpx solid #e0e0e0;
  transition: all 0.3s ease;
  min-height: 120rpx;
  position: relative;
  cursor: pointer;
}

.facility-available {
  background: linear-gradient(135deg,rgba(112, 23, 105,1) 20%,rgb(185, 61, 175) 80%);
  border: 1rpx solid #9f2995;
  box-shadow: 0 4rpx 16rpx rgba(112, 23, 105, 0.2);
}

.facility-unavailable {
  background: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  color: #9e9e9e;
  opacity: 0.6;
}

.facility-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 12rpx;
  flex-shrink: 0;
}

.facility-available .facility-icon {
  opacity: 1;
}

.facility-unavailable .facility-icon {
  opacity: 0.4;
  filter: grayscale(100%);
}

.facility-name {
  font-size: 22rpx;
  text-align: center;
  line-height: 1.2;
  font-weight: 500;
  word-break: keep-all;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.facility-available .facility-name {
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.facility-unavailable .facility-name {
  color: #9e9e9e;
}

/* 小程序订场图标旋转动画 */
.facility-item[data-code="1"].facility-available .facility-icon {
  animation: appOrderRotate 5s ease-in-out infinite;
}

@keyframes appOrderRotate {
  0% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(360deg);
  }
  25.1%, 100% {
    transform: rotate(360deg);
  }
}

/* 球馆介绍区域 */
.description-section {
  background-color: #ffffff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.description-content {
  margin-top: 20rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .venue-name {
    font-size: 32rpx;
  }
  
  .meta-label,
  .meta-value {
    font-size: 26rpx;
  }
  
  .facilities-grid {
    gap: 16rpx;
    padding: 0 4rpx;
  }
  
  .facility-item {
    padding: 24rpx 12rpx;
    min-height: 140rpx;
  }
  
  .facility-icon {
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 8rpx;
  }
  
  .facility-name {
    font-size: 20rpx;
  }
}