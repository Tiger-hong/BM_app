/* venues.wxss */

/* 隐藏页面滚动条 */
page {
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
}

/* 隐藏滚动条但保持滚动功能 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

.venues-container {
  background-color: #f8f9fa;
  min-height: 100vh;
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 固定头部样式 */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #f8f9fa;
  z-index: 100;
  padding: 32rpx 32rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 搜索栏样式 */
.search-section {
  padding-bottom: 20rpx;
}

.search-bar {
  position: relative;
  background: white;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 100rpx 0 40rpx;
  font-size: 28rpx;
  color: #333;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height:60rpx;
}

/* 筛选区域样式 */
.filter-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 20rpx;
  gap: 20rpx;
}

/* 设施筛选样式 */
.facility-filter-options {
  display: flex;
  gap: 16rpx;
  flex: 1;
}

.facility-filter-item {
  display: flex;
  justify-content:center;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e0e0e0;
  background-color: #ffffff;
  transition: all 0.3s ease;
  min-width: 100rpx;
  position: relative;
}

.facility-filter-item .facility-filter-icon {
  width: 32rpx;
  height: 32rpx;
  transition: all 0.3s ease;
}

.facility-filter-item .facility-filter-name {
  font-size: 22rpx;
  color: #666666;
  font-weight: normal;
  margin-left:2rpx;
  transition: all 0.3s ease;
}

/* 激活状态 */
.facility-filter-item.active {
  background-color: #8e44ad;
  border-color: #8e44ad;
}

.facility-filter-item.active .facility-filter-name {
  color: #ffffff;
  font-weight: 600;
}

/* 重置按钮样式 */
.reset-filter-btn {
  display: flex;
  align-items: center;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  font-size: 38rpx;
  flex-shrink: 0;
}

.reset-filter-icon {
  width: 60rpx;
  height: 60rpx;
}


/* 地区筛选样式 */
.region-filter {
  flex-shrink: 0;
  width: 280rpx;
}

.region-picker {
  width: 100%;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.picker-text {
  font-size: 24rpx;
  color: #333333;
  flex: 1;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999999;
  margin-left: 10rpx;
}

/* 地区选择器弹窗样式 */
.district-picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.district-picker-overlay.show {
  opacity: 1;
  visibility: visible;
}

.district-picker {
  position: absolute;
  bottom: 140rpx; /* 进一步调整底部位置，确保完全不被tabbar遮挡 */
  left: 0;
  right: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 65vh; /* 适当调整最大高度 */
  transform: translateY(100%);
  transition: transform 0.3s ease;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.district-picker-overlay.show .district-picker {
  transform: translateY(0);
}

.district-picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.district-picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.district-picker-close {
  font-size: 32rpx;
  color: #999;
  padding: 8rpx;
}

.district-picker-list {
  max-height: 45vh; /* 调整列表最大高度适应新的弹窗高度 */
  padding: 0 32rpx 32rpx;
  overflow-y: auto; /* 确保内容可滚动 */
}

.district-picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
  transition: background 0.2s ease;
  transform-origin: center center;
  position: relative;
}

.district-picker-item:last-child {
  border-bottom: none;
}

.district-picker-item:active {
  background: rgba(159, 41, 149, 0.05);
  transform: translateX(0);
}

.district-picker-item.active {
  background: rgba(159, 41, 149, 0.1);
}

.district-picker-name {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

.district-picker-item.active .district-picker-name {
  color: #9f2995;
  font-weight: 600;
}

.district-picker-check {
  font-size: 32rpx;
  color: #9f2995;
  font-weight: bold;
}

/* 球馆列表样式 */
.venues-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 230rpx 32rpx 180rpx; /* 顶部间距避免被固定头部遮挡，底部间距避免被tabbar遮挡 */
}

.venue-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  transform-origin: center center;
  position: relative;
}

.venue-card:active {
  transform: translateY(2rpx) translateX(0);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

/* 球馆头部信息 */
.venue-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.venue-logo {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #FFE082 0%, #FFD54F 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.venue-logo-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.venue-emoji {
  font-size: 40rpx;
}

.venue-basic-info {
  flex: 1;
}

.venue-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.venue-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.venue-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.venue-status.open {
  background: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.venue-status.busy {
  background: rgba(255, 152, 0, 0.1);
  color: #FF9800;
}

.venue-status.closed {
  background: rgba(244, 67, 54, 0.1);
  color: #F44336;
}

.venue-address {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
  line-height: 1.4;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: calc(20em);
}

.venue-time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 球馆详细信息 */
.venue-details {
  margin-bottom: 0;
}

.venue-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.stat-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  font-family: 'Noto Sans SC', sans-serif;
}

/* 设施标签 */
.facilities {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.facility-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: rgba(159, 41, 149, 0.1);
  color: #9f2995;
  font-size: 22rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(159, 41, 149, 0.2);
}

.facility-tag-icon {
  width: 20rpx;
  height: 20rpx;
}

.facility-tag-name {
  font-size: 22rpx;
  color: #9f2995;
}

/* 加载状态样式 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 320rpx 32rpx 180rpx; /* 顶部间距避免被固定头部遮挡 */
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 50rpx;
}

/* 羽毛球拍动画区域 */
.racket-animation {
  position: relative;
  width: 160rpx;
  height: 120rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

/* 羽毛球拍拍面（水平线） */
.racket-face {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #9f2995 0%, #d81b60 50%, #9f2995 100%);
  border-radius: 3rpx;
  box-shadow: 0 2rpx 8rpx rgba(159, 41, 149, 0.4);
  animation: racketGlow 2s ease-in-out infinite;
}

/* 跳动的羽毛球 */
.bouncing-shuttlecock {
  position: absolute;
  bottom: 6rpx; /* 从拍面上方开始 */
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 40rpx;
  animation: shuttlecockBounce 1.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) infinite;
}

.shuttlecock-icon {
  width: 95%;
  height: 95%;
  filter: drop-shadow(0 4rpx 12rpx rgba(159, 41, 149, 0.3));
}

/* 文字动画区域 */
.loading-text-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #9f2995;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 点点动画 */
.loading-dots {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #9f2995 0%, #d81b60 100%);
  animation: dotPulse 1.4s ease-in-out infinite;
}

.dot:nth-child(1) {
  animation-delay: 0s;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

/* 动画定义 */
/* 羽毛球在拍面上跳动 - 更丝滑的动画和最高点翻转 */
@keyframes shuttlecockBounce {
  0% {
    transform: translateX(-50%) translateY(0) scale(1) scaleX(1);
    opacity: 1;
  }
  
  10% {
    transform: translateX(-50%) translateY(-15rpx) scale(1.05) scaleX(1);
    opacity: 1;
  }
  
  20% {
    transform: translateX(-50%) translateY(-30rpx) scale(1.1) scaleX(1);
    opacity: 0.95;
  }
  
  35% {
    transform: translateX(-50%) translateY(-50rpx) scale(1.15) scaleX(1);
    opacity: 0.9;
  }
  
  50% {
    transform: translateX(-50%) translateY(-65rpx) scale(1.2) scaleX(-1);
    opacity: 0.85;
  }
  
  65% {
    transform: translateX(-50%) translateY(-50rpx) scale(1.15) scaleX(-1);
    opacity: 0.9;
  }
  
  80% {
    transform: translateX(-50%) translateY(-30rpx) scale(1.1) scaleX(-1);
    opacity: 0.95;
  }
  
  90% {
    transform: translateX(-50%) translateY(-15rpx) scale(1.05) scaleX(-1);
    opacity: 1;
  }
  
  100% {
    transform: translateX(-50%) translateY(0) scale(1) scaleX(1);
    opacity: 1;
  }
}

/* 拍面发光效果 */
@keyframes racketGlow {
  0%, 100% {
    box-shadow: 0 2rpx 8rpx rgba(159, 41, 149, 0.4);
    opacity: 0.8;
  }
  50% {
    box-shadow: 0 4rpx 16rpx rgba(159, 41, 149, 0.8);
    opacity: 1;
  }
}

/* 点点脉冲效果 */
@keyframes dotPulse {
  0%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 320rpx 32rpx 180rpx; /* 顶部间距避免被固定头部遮挡 */
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
}