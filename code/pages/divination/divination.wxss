/* divination.wxss */
.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  pointer-events: none;
}

.bg-emoji {
  position: absolute;
  font-size: 60rpx;
  opacity: 0.1;
  animation: float 6s ease-in-out infinite;
}

.bg-emoji:nth-child(1) {
  top: 10%;
  left: 20%;
  animation-delay: 0s;
}

.bg-emoji:nth-child(2) {
  top: 50%;
  right: 15%;
  animation-delay: 2s;
}

.bg-emoji:nth-child(3) {
  bottom: 20%;
  left: 10%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-20px) rotate(10deg);
  }
}

/* 标题区域 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
  position: relative;
  z-index: 2;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 2rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 求签容器 */
.divination-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 2;
}

.divination-box {
  width: 320rpx;
  height: 320rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.15) 100%);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(25rpx);
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 
    0 25rpx 70rpx rgba(0, 0, 0, 0.25),
    inset 0 2rpx 10rpx rgba(255, 255, 255, 0.3);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.divination-box::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(from 0deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  animation: rotate 3s linear infinite;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.divination-box:active::before {
  opacity: 1;
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.divination-box:active {
  transform: scale(0.92);
  box-shadow: 
    0 15rpx 50rpx rgba(0, 0, 0, 0.35),
    inset 0 2rpx 10rpx rgba(255, 255, 255, 0.4);
}

.divination-box.shake {
  animation: enhance-shake 0.8s ease-in-out;
}

@keyframes enhance-shake {
  0%, 100% { transform: translateX(0) rotate(0deg); }
  10% { transform: translateX(-15rpx) rotate(-2deg); }
  20% { transform: translateX(15rpx) rotate(2deg); }
  30% { transform: translateX(-12rpx) rotate(-1deg); }
  40% { transform: translateX(12rpx) rotate(1deg); }
  50% { transform: translateX(-8rpx) rotate(-0.5deg); }
  60% { transform: translateX(8rpx) rotate(0.5deg); }
  70% { transform: translateX(-5rpx) rotate(-0.3deg); }
  80% { transform: translateX(5rpx) rotate(0.3deg); }
  90% { transform: translateX(-2rpx) rotate(-0.1deg); }
}

.sign-stick-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
}

.sign-stick-icon {
  position: relative;
  margin-bottom: 25rpx;
}

.sign-stick-emoji {
  font-size: 100rpx;
  filter: drop-shadow(0 6rpx 12rpx rgba(0, 0, 0, 0.4));
  animation: float-stick 2s ease-in-out infinite;
}

@keyframes float-stick {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-8px) rotate(5deg); }
}

.stick-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
  height: 120rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  border-radius: 50%;
  animation: glow-pulse 2s ease-in-out infinite;
  z-index: -1;
}

@keyframes glow-pulse {
  0%, 100% { opacity: 0.3; transform: translate(-50%, -50%) scale(1); }
  50% { opacity: 0.6; transform: translate(-50%, -50%) scale(1.2); }
}

.sign-stick-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 700;
  text-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.4);
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.sign-stick-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 提示文字 */
.hint-text {
  margin-top: 50rpx;
  text-align: center;
}

.hint {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  font-weight: 500;
}

/* 摇签中提示 */
.shaking-text {
  margin-top: 50rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.shaking-hint {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  text-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.4);
  margin-bottom: 20rpx;
}

.loading-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.8);
  animation: dot-bounce 1.4s ease-in-out infinite;
}

.dot:nth-child(1) { animation-delay: 0s; }
.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes dot-bounce {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.4;
  }
  30% {
    transform: translateY(-15rpx);
    opacity: 1;
  }
}

/* 结果展示区域 */
.result-container {
  position: relative;
  z-index: 2;
  margin-bottom: 40rpx;
  animation: result-appear 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes result-appear {
  0% {
    opacity: 0;
    transform: translateY(60rpx) scale(0.8);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.result-box {
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.98) 0%, rgba(248, 250, 252, 0.95) 100%);
  border-radius: 28rpx;
  padding: 50rpx 40rpx;
  box-shadow: 
    0 25rpx 80rpx rgba(0, 0, 0, 0.25),
    0 10rpx 30rpx rgba(0, 0, 0, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(25rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  position: relative;
  overflow: hidden;
}

.result-box::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 50%, #667eea 100%);
  background-size: 200% 100%;
  animation: shimmer 2s ease-in-out infinite;
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 35rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(102, 126, 234, 0.1);
}

.result-title {
  font-size: 42rpx;
  font-weight: 800;
  color: #2c3e50;
  flex: 1;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.fortune-level {
  padding: 16rpx 28rpx;
  border-radius: 25rpx;
  margin-left: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.fortune-level::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shine 2s ease-in-out infinite;
}

@keyframes shine {
  0% { left: -100%; }
  100% { left: 100%; }
}

.fortune-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.4);
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
}

.result-content {
  margin-bottom: 35rpx;
}

.result-icon {
  margin-bottom: 25rpx;
}

.fortune-emoji {
  font-size: 60rpx;
}


.result-description {
  font-size: 32rpx;
  line-height: 1.7;
  color: #495057;
  text-align: justify;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.result-suggestion {
  display: flex;
  align-items: flex-start;
  padding: 35rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  border-radius: 20rpx;
  border-left: 6rpx solid #667eea;
  margin-bottom: 35rpx;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.1);
}

.suggestion-icon {
  margin-right: 20rpx;
  margin-top: 5rpx;
}

.suggestion-emoji {
  font-size: 32rpx;
  animation: glow 2s ease-in-out infinite;
}

@keyframes glow {
  0%, 100% { 
    filter: brightness(1);
    transform: scale(1);
  }
  50% { 
    filter: brightness(1.3);
    transform: scale(1.05);
  }
}

.suggestion-content {
  flex: 1;
}

.suggestion-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #667eea;
  display: block;
  margin-bottom: 15rpx;
  letter-spacing: 0.5rpx;
}

.suggestion-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #495057;
  font-weight: 500;
}

.come-back-tomorrow {
  text-align: center;
  padding: 25rpx;
  background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 152, 0, 0.1) 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 193, 7, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.tomorrow-icon {
  font-size: 28rpx;
  animation: sunrise 3s ease-in-out infinite;
}

@keyframes sunrise {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-4px); }
}

.tomorrow-text {
  font-size: 28rpx;
  color: #856404;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

/* 说明区域 */
.explanation {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 2;
}

.explanation-header {
  margin-bottom: 20rpx;
  text-align: center;
}

.explanation-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.explanation-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.explanation-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}